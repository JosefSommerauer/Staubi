#!/bin/sh
### BEGIN INIT INFO
# Provides:          Für welches Programm ist das Script?
# Required-Start:    
# Required-Stop:     
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Kurze Beschreibung
# Description:       Längere Beschreibung
### END INIT INFO
 
# Actions
case "$1" in
    start)
        # START
		echo start jsonserver 
		node /home/pi/node/app.js > /dev/null & 
        ;;
    stop)
        # STOP
		echo stop jsonserver 
		killall node& 
        ;;
    restart)
        # RESTART
        ;;
esac
 
exit 0